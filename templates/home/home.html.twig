{% extends 'base.html.twig' %}
{% block title %}Home{% endblock %}

{% block body %}
{% for message in app.flashes('message') %}
<div class="alert alert-success text-center" role="alert">
    {{ message}}
</div>
{% endfor %}
{% for message in app.flashes('danger') %}
<div class="alert alert-danger text-center" role="alert">
    {{ message }}
</div>
{% endfor %}
<header class=" masthead slider text-white text-center">
    <div class="container align-items-center ">
        <p class="hook-text">Snowtricks a community for snowboard enthusiasts</p>
        <div class="scroll-to-down position-absolute ">
            <button class="btn position-relative text-white" type="button" data-toggle="collapse" data-target="#tricksHome" aria-expanded="false" aria-controls="tricksHome">
                <i class="fa fa-chevron-down"></i></button>
        </div>
    </div>
</header>
<div class="collapse container-fluid" id="tricksHome">
    {% include 'trick/trickslist.html.twig' %}
</div>
{% endblock %}

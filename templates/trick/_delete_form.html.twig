<form method="post" action="{{ path('trick_delete', {'id': trick.id}) }}" onsubmit="return confirm('Are you sure you want to delete this trick?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
    {% if is_granted('edit', trick) %}
    <button class="btn-roun-shadow d-flex d-inline-block btn-delete-image btn btn-danger fas fa-trash-alt"></button>
    {% endif %}
</form>
